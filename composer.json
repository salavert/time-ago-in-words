{
    "name": "salavert/time-ago-in-words",
    "description": "Time ago Twig extension where you can easily convert a datetime or timestamp to a distance of time in words.",
    "keywords": ["time", "twig", "time ago", "distance of time", "time ago in words"],
    "homepage": "http://github.com/salavert/time-ago-in-words",
    "license": "MIT",
    "authors": [
        {
            "name": "Jose Salavert",
            "email": "salavert@gmail.com",
	        "homepage": "http://www.josesalavert.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "twig/twig": "~1.12 || ~2"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "symfony/symfony": "2.* || 3.*"
    },
    "autoload": {
        "psr-4": {
			"Salavert\\Twig\\Extension\\": "src/Salavert/Twig/Extension/"
		}
    },
    "autoload-dev": {
        "psr-4": {
            "Salavert\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    }
}
